<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical">

    <androidx.drawerlayout.widget.DrawerLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawer_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--상단의 타이틀바처럼 사용한 영역 지정-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#EDDF65"
                android:orientation="horizontal">

                <Button
                    android:layout_width="30dp"
                    android:layout_height="50dp"
                    android:background="@drawable/menu"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="25dp"
                    android:id="@+id/opendrawer"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여행"
                    android:textSize="25dp"
                    android:layout_gravity="center"
                    android:id="@+id/txt_home_actionbar"/>


            </LinearLayout>

            <!--실행했을 때 메인으로 보여질 화면-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="여기는 메인화면 입니다"
                    android:textSize="25dp"/>

            </LinearLayout>

        </LinearLayout>

        <!--숨겨져 있다가 열리면서 보여질 서랍 레이아웃-->
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#DEEA69"
            android:id="@+id/drawer"
            android:layout_gravity="start">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="id님 반가워요"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:id="@+id/txt_id"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="패키지 여행"
                android:background="#00ff0000"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="30dp"
                android:id="@+id/btn_package"/>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:text="자유 여행"
                android:id="@+id/btn_free"
                android:background="#00ff0000"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="30dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지역별"
                android:textSize="20dp"
                android:background="#00ff0000"
                android:id="@+id/btn_area"
                android:layout_marginLeft="50dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="테마별"
                android:textSize="20dp"
                android:background="#00ff0000"
                android:id="@+id/btn_theme"
                android:layout_marginLeft="50dp"/>



        </LinearLayout>
    </androidx.drawerlayout.widget.DrawerLayout>

</LinearLayout>