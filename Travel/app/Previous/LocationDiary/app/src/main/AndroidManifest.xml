<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sample.locationdiary">
    <!-- 상대적으로 위치 정보를 얻어오기 위한 권한 설정(지하에 있어도 위치 얻어올 수 있음) -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" /> <!-- GPS를 이용해서 정확한 위치정보를 얻어오기 위한 권한 설정(전력소모 많음, 지하에 있으면 정확한 위치 측정 불가) -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /> <!-- 위도,경도를 주소로 변환하기 위해(지오코딩) 구글 서버에 접근하기 위한 인터넷 권한 설정 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="LocationDiary"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".DiaryCreateActivity"></activity>
        <activity android:name=".FindPwdActivity" />
        <activity android:name=".FindIdActivity" />
        <activity android:name=".HomeActivity">

        </activity>
        <activity android:name=".SignupActivity" />
        <activity android:name=".LogoActivity" />
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".GpsSettingActivity" />
    </application>

</manifest>