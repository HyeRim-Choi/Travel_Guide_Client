<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입 창"
        android:textSize="35dp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"/>

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">


           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:inputType="text"
               android:hint="이름"
               android:textSize="20dp"
               android:id="@+id/et_name"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <Button
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="생년월일"
                   android:textSize="20dp"
                   android:id="@+id/btn_birth"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="15dp"
                   android:text="생년월일을 지정해주세요."
                   android:textSize="20dp"
                   android:id="@+id/txt_birth"/>
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="성별"
                   android:textSize="20dp"
                   android:layout_weight="1"
                   android:textColor="@color/black"
                   android:layout_gravity="center_vertical"/>

               <RadioGroup
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:id="@+id/radioGroup_gen"
                   android:layout_weight="1">

                   <RadioButton
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="남"
                       android:textSize="20dp"
                       android:id="@+id/radio_m"/>

                   <RadioButton
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="여"
                       android:textSize="20dp"
                       android:layout_marginLeft="30dp"
                       android:id="@+id/radio_w"/>

               </RadioGroup>

           </LinearLayout>




           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:inputType="phone"
               android:hint="휴대폰 번호('-' 붙이지 마세요)"
               android:textSize="20dp"
               android:id="@+id/et_tel"/>

           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:inputType="textEmailAddress"
               android:hint="이메일"
               android:textSize="20dp"
               android:id="@+id/et_email"/>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <EditText
                   android:layout_width="300dp"
                   android:layout_height="wrap_content"
                   android:hint="아이디"
                   android:textSize="20dp"
                   android:id="@+id/et_id"
                   android:layout_weight="1"/>

               <Button
                   android:layout_width="wrap_content"
                   android:layout_height="60dp"
                   android:text="중복 확인"
                   android:textSize="20dp"
                   android:id="@+id/btn_checkId"/>

           </LinearLayout>

           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:inputType="textPassword"
               android:hint="비밀번호"
               android:textSize="20dp"
               android:id="@+id/et_pwd"/>

           <EditText
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:inputType="textPassword"
               android:hint="비밀번호 확인"
               android:textSize="20dp"
               android:id="@+id/et_checkPwd"/>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="어떤 회원으로 가입하시겠습니까?\n-------------------------------------------------------------------"
               android:textSize="22dp"
               android:gravity="center"/>

           <RadioGroup
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_gravity="center"
               android:id="@+id/radioGroup_auth">

               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="가이드"
                   android:textSize="20dp"
                   android:id="@+id/radio_guide"/>

               <RadioButton
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="일반 회원"
                   android:textSize="20dp"
                   android:layout_marginLeft="30dp"
                   android:id="@+id/radio_person"/>

           </RadioGroup>

           <Button
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="회원가입"
               android:textSize="25dp"
               android:layout_marginTop="25dp"
               android:id="@+id/btn_signUp"/>

       </LinearLayout>


   </ScrollView>

</LinearLayout>