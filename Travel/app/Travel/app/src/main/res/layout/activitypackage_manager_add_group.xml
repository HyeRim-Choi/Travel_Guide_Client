<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mpackage.operation.ManagerAddGroupActivity"
    android:background="@color/appColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/img_group"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="그룹추가 창"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="65dp"
            android:layout_marginBottom="30dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_title"
            android:inputType="text"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:textColorHint="@color/white"
            android:textCursorDrawable="@null"
            android:layout_marginBottom="15dp"
            android:hint="그룹 이름"
            android:textSize="30dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <Button
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="운영 여행 지정"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_round"
                android:id="@+id/btn_registerTrip"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="운영하려는 여행을 지정해주세요."
                android:textColor="@color/white"
                android:textSize="18dp"
                android:id="@+id/txt_registerTrip"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <Button
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="출발 날짜"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_round"
                android:id="@+id/btn_startDate"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="출발 날짜를 지정해주세요."
                android:textColor="@color/white"
                android:textSize="20dp"
                android:id="@+id/txt_startDate"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <Button
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="도착 날짜"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_round"
                android:id="@+id/btn_endDate"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="도착 날짜를 지정해주세요."
                android:textColor="@color/white"
                android:textSize="20dp"
                android:id="@+id/txt_endDate"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_userId"
                android:hint="그룹으로 초대 할 아이디를 입력하세요"
                android:inputType="text"
                android:layout_weight="2"
                android:textColor="@color/white"
                android:backgroundTint="@color/white"
                android:textColorHint="@color/white"
                android:textCursorDrawable="@null"
                android:textSize="20dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="추가"
                android:textSize="25dp"
                android:textColor="@color/white"
                android:background="@drawable/btn_round"
                android:layout_weight="4"
                android:id="@+id/btn_addId"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="20dp"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:id="@+id/txt_addId"/>

    </LinearLayout>


    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="그룹 생성"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:layout_gravity="bottom |center_horizontal"
        android:background="@drawable/btn_round"
        android:layout_marginBottom="10dp"
        android:id="@+id/btn_addGroup"/>


</FrameLayout>