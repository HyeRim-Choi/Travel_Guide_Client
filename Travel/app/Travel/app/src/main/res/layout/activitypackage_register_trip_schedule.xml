<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mpackage.plan.RegisterTripScheduleActivity"
    android:background="@color/appColor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/frame">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/img_travel_itinerary"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="일정 등록"
                        android:textSize="35dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="60dp"/>

                </FrameLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/frame"
                    android:id="@+id/et_title"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/white"
                    android:textColorHint="@color/white"
                    android:textCursorDrawable="@null"
                    android:layout_marginBottom="15dp"
                    android:hint="제목"
                    android:textSize="30dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/et_title"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    android:id="@+id/linear1">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:id="@+id/et_night"
                        android:hint="1"
                        android:inputType="number"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/white"
                        android:textColorHint="@color/white"
                        android:textCursorDrawable="@null"
                        android:textSize="20dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_marginLeft="5dp"
                        android:text="박"
                        android:textColor="@color/white"
                        android:textSize="20dp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:id="@+id/et_day"
                        android:layout_marginLeft="5dp"
                        android:hint="2"
                        android:inputType="number"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/white"
                        android:textColorHint="@color/white"
                        android:textCursorDrawable="@null"
                        android:textSize="20dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_marginLeft="5dp"
                        android:text="일"
                        android:textColor="@color/white"
                        android:textSize="20dp"/>

                    <Button
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="확인"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:background="@drawable/btn_round"
                        android:id="@+id/btn_confirm"/>

                </LinearLayout>


                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/linear1"
                    android:dividerHeight="2dp"
                    android:divider="@color/white"
                    android:background="@color/appColor"
                    android:id="@+id/trip_schedule"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_below="@id/trip_schedule"
                    android:layout_marginTop="10dp"
                    android:id="@+id/linear2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="상품 특징"
                        android:textSize="25dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="10dp"/>


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:id="@+id/et_introduce"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:hint="여행 상품의 특징을 작성해주세요"
                        android:background="@drawable/edittext_rounded_corner_rectangle"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textCursorDrawable="@null"
                        android:textSize="20dp"
                        android:singleLine="false"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/linear2"
                    android:id="@+id/linear3">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="상세 정보"
                        android:textSize="25dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="10dp"/>


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:id="@+id/et_information"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:hint="그룹 구성원의 정보, 체크 사항등을 작성해주세요"
                        android:background="@drawable/edittext_rounded_corner_rectangle"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:textCursorDrawable="@null"
                        android:textSize="20dp"/>

                </LinearLayout>


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/linear3"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp"
                    android:text="등록"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_round"
                    android:id="@+id/btn_register" />


            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>